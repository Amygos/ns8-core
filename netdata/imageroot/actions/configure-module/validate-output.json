{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Output for netdata configuration",
  "$id": "http://nethserver.org/json-schema/task/output/netdata/configure",
  "examples": [
    {
      "api_key": "17a9e168-9fa1-4685-bac3-25c45e6b21e2"
    }
  ],
  "type": "object",
  "required": [
    "api_key"
  ],
  "properties": {
    "api_key": {
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
      "description": "API key for netdata. It must be a valid UUID"
    }
  }
}
