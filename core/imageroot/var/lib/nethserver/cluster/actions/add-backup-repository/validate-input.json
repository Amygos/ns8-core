{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "add-backup-repository input",
    "$id": "http://schema.nethserver.org/cluster/add-backup-repository-input.json",
    "description": "Input schema of the add-backup-repository action",
    "examples": [
        {
            "name": "repository1",
            "url": "b2:mybackup"
        },
        {
            "name": "repository2",
            "url": "s3:usbackup",
            "password": "45a1905ef8de3c03b05d47071754bd5ddbfec0edaa56d4c44f981386f3f24888" 
        }
    ],
    "type": "object",
    "properties": {
        "name": {
           "description": "Unique backup repository name",
            "type": "string"
        },
        "url": {
            "description": "URL of the repository in restic format",
            "type": "string"
        },
        "password": {
            "description": "Select the password for restic encryption. If this parameter is not specified, the API will generate a random password",
            "type": "string"
        }
    },
    "required": [
          "name",
          "url"
    ]
}
