{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "set-external-provider-name input",
    "description": "Set the UI display name of anexternal smarthost provider",
    "$id": "http://schema.nethserver.org/cluster/set-external-provider-name-input.json",
    "examples": [
        {
            "host": "smtp.example.com",
            "port": 587,
            "username": "username",
            "password": "secret",
            "enabled": true,
            "tls": true,
            "tls_verify": false
        }
    ],
    "type": "object",
    "required": [
            "host",
            "port",
            "username",
            "password",
            "enabled",
            "tls",
            "tls_verify"
    ],
    "properties": {
        "username": {
            "type": "string",
            "title":"username",
            "minLength": 1,
            "description": "username to use the smarthost smtp"
        },
        "port": {
            "type": "integer",
            "title":"port",
            "minimum": 1,
            "maximum": 65535,
            "description": "port number of the smtp smarthost"
        },
        "password": {
            "type": "string",
            "title":"password",
            "minLength": 1,
            "description": "Password to use the smarthost"
        },
        "host": {
            "type": "string",
            "title":"host",
            "description": "Host name for the smarthost, like 'wiki.nethserver.org'",
            "format": "idn-hostname"
        },
        "enabled": {
            "type": "boolean"
        },
        "tls": {
            "format": "boolean"
        },
        "tls_verify": {
            "format": "boolean"
        }
    }
}
