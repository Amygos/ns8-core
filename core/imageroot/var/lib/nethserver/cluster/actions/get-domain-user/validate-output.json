{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "get-domain-user output",
    "description": "Return the details of a user",
    "$id": "http://schema.nethserver.org/cluster/get-domain-user-output.json",
    "examples": [
        {
            "user": {
                "user": "administrator",
                "full_name": "Administrator",
                "groups": [
                    {
                        "group": "Domain Admins",
                        "description": "Designated administrators of the domain"
                    }
                ]
            }
        }
    ],
    "type": "object",
    "required": [
        "user"
    ],
    "properties": {
        "user": {
            "$ref": "#/$defs/user"
        }
    },
    "$defs": {
        "user": {
            "type": "object",
            "required": [
                "user",
                "full_name",
                "groups"
            ],
            "properties": {
                "user": {
                    "type": "string",
                    "minLength": 1
                },
                "full_name": {
                    "type": "string",
                    "title": "Full name",
                    "description": "The person name",
                    "minLength": 1
                },
                "groups": {
                    "type": "array",
                    "title": "List of groups the user belongs to",
                    "items": {
                        "$ref": "#/$defs/group"
                    }
                }
            }
        },
        "group": {
            "title": "Group details",
            "type": "object",
            "required": [
                "group",
                "description"
            ],
            "properties": {
                "group": {
                    "type": "string",
                    "minLength": 1
                },
                "description": {
                    "type": "string",
                    "title": "Description",
                    "description": "A brief description of the group purpose",
                    "minLength": 1
                }
            }
        }
    }
}
